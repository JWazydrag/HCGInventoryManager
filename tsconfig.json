{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@screens": ["app/screens"],
            "@components": ["app/components"],
            "@utils": ["app/utils"],
            "@contexts/*": ["app/contexts/*"],
            "@config/*": ["app/config/*"],
            "@assets/*": ["app/assets/*"],
            "@types": ["app/types"]
        }
    }
}
